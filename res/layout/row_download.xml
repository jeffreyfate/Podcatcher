<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.jeffthefate.pod_dev.RelativeLayoutEx
        android:id="@+id/ButtonLayout"
        android:layout_height="72dip"
        android:layout_width="60dip"
        android:layout_alignParentRight="true" >
        <ImageView 
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="72dip"
            android:contentDescription="Button Image"
            android:src="@drawable/btn_context_menu" />
    </com.jeffthefate.pod_dev.RelativeLayoutEx>
    <LinearLayout
        android:id="@+id/TextLayout"
        android:layout_width="match_parent"
        android:layout_height="72dip"
        android:orientation="vertical"
        android:padding="10dip"
        android:layout_gravity="center_vertical" >
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="This is a really really really really long line of text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/text2"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:singleLine="true"
                android:text="This is a really really really really long line of text"
                android:ellipsize="end" />
            <LinearLayout
                android:id="@+id/playing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible" >
                <ImageView
                    android:id="@+id/playingleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/indicator_playing_peak_meter_1"
                    android:contentDescription="Paying Indicator Left" />
                <ImageView
                    android:id="@+id/playingright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/indicator_playing_peak_meter_1"
                    android:contentDescription="Paying Indicator Left" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/downloadprogress"
        style="@style/Widget.Holo.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:max="100"
        android:progress="0"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
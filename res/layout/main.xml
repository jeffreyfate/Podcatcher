<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<LinearLayout
	    android:id="@+id/PlaybackControls"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black" >
	    <ImageView
	        android:id="@+id/PlaybackControlsTopBorder"
	        android:layout_width="match_parent"
	        android:layout_height="2dip" />
		<LinearLayout
		    android:layout_height="50dip"
		    android:layout_width="match_parent"
		    android:orientation="horizontal"
		    android:background="@android:color/black" >
		    <LinearLayout
		        android:id="@+id/MetaLayout"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/color_btn_context_menu"
		        android:layout_weight="1" >
			    <TextView
	                android:id="@+id/MetaEpisode"
	                android:layout_height="50dip"
                    android:layout_width="90dip"
	                android:layout_margin="3dip"
	                android:textSize="12dip"
	                android:textStyle="bold"
	                android:textColor="@android:color/white"
	                android:ellipsize="end"
	                android:lines="3" />
			    <ImageView
			        android:id="@+id/PlaybackArtButton"
			        android:layout_height="50dip"
                    android:layout_width="50dip"
		            android:scaleType="centerInside"
		            android:layout_gravity="center"
			        android:src="@drawable/ic_album_loading" />
		    </LinearLayout>
		    <RelativeLayout
                android:id="@+id/PlaybackRewLayout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" >
                <ProgressBar
                    android:id="@+id/PlaybackRewProgress"
                    android:layout_height="36dip"
                    android:layout_width="36dip"
                    android:visibility="invisible"
                    android:layout_centerInParent="true" />
                <ImageView
	                android:id="@+id/PlaybackRewButton"
	                android:layout_height="48dip"
	                android:layout_width="70dip"
	                android:paddingTop="6dip"
	                android:paddingBottom="6dip"
	                android:paddingLeft="16dip"
	                android:paddingRight="16dip"
	                android:scaleType="centerCrop"
	                android:src="@drawable/btn_playback_rew_normal_holo_dark"
	                android:background="@drawable/color_btn_context_menu" />
            </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/PlaybackPlayPauseLayout"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_gravity="center"
		        android:layout_weight="1" >
		        <ProgressBar
		            android:id="@+id/PlaybackPlayPauseProgress"
		            android:layout_height="36dip"
		            android:layout_width="36dip"
		            android:visibility="invisible"
		            android:layout_centerInParent="true" />
			    <ImageView
			        android:id="@+id/PlaybackPlayPauseButton"
			        android:layout_height="48dip"
			        android:layout_width="70dip"
		            android:paddingTop="6dip"
		            android:paddingBottom="6dip"
		            android:paddingLeft="16dip"
		            android:paddingRight="16dip"
		            android:scaleType="centerCrop"
			        android:src="@drawable/btn_playback_pause_normal_holo_dark"
			        android:background="@drawable/color_btn_context_menu" />
		    </RelativeLayout>
		    <RelativeLayout
                android:id="@+id/PlaybackFfwdLayout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" >
                <ProgressBar
                    android:id="@+id/PlaybackFfwdProgress"
                    android:layout_height="36dip"
                    android:layout_width="36dip"
                    android:visibility="invisible"
                    android:layout_centerInParent="true" />
                <ImageView
	                android:id="@+id/PlaybackFfwdButton"
	                android:layout_height="48dip"
	                android:layout_width="70dip"
	                android:paddingTop="6dip"
	                android:paddingBottom="6dip"
	                android:paddingLeft="16dip"
	                android:paddingRight="16dip"
	                android:scaleType="centerCrop"
	                android:src="@drawable/btn_playback_ff_normal_holo_dark"
	                android:background="@drawable/color_btn_context_menu" />
            </RelativeLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/PlaybackControls" >
        <com.viewpagerindicator.TitlePageIndicator
            android:id="@+id/titles"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
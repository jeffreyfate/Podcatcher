<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.jeffthefate.pod_dev.RelativeLayoutEx
        android:id="@+id/ButtonLayout"
        android:layout_height="72dip"
        android:layout_width="60dip"
        android:layout_alignParentRight="true" >
        <ImageView 
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="72dip"
            android:contentDescription="Button Image"
            android:src="@drawable/btn_context_menu" />
    </com.jeffthefate.pod_dev.RelativeLayoutEx>
    <LinearLayout
        android:id="@+id/TextLayout"
        android:layout_width="match_parent"
        android:layout_height="72dip"
        android:orientation="vertical"
        android:padding="10dip"
        android:layout_gravity="center_vertical" >
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="This is a really really really really long line of text" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/text2"
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:singleLine="true"
                android:text="This is a really really really really long line of text"
                android:ellipsize="end"
                android:layout_alignParentLeft="true" />
            <RelativeLayout
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dip" >
                <ProgressBar
                    android:id="@+id/busy"
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:visibility="invisible"
                    android:layout_centerInParent="true" />
                <ImageView
                    android:id="@+id/download"
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:src="@drawable/stat_sys_download_anim0"
                    android:visibility="invisible"
                    android:layout_centerInParent="true" />
	            <LinearLayout
	                android:id="@+id/playing"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:visibility="visible" >
	                <ImageView
	                    android:id="@+id/playingleft"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/indicator_playing_peak_meter_1"
	                    android:contentDescription="Paying Indicator Left" />
	                <ImageView
	                    android:id="@+id/playingright"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/indicator_playing_peak_meter_1"
	                    android:contentDescription="Paying Indicator Left" />
	            </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>